@model UsuarioModel

@{
    Layout = "_LayoutDeslogado";
}

@Html.Raw(TempData["msg"])


<body>
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form  asp-controller="Login" asp-action="Criar" method="post">
			<h1>Criar Conta</h1>
			
			<div class="form-group">
        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
      <input type="text" asp-for="Email"  class="form-control" placeholder="E-mail">
      @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <input type="text" asp-for="Login"  class="form-control" placeholder="Login">
      @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <input type="password" asp-for="Senha"  class="form-control" placeholder="Senha">
      @Html.ValidationMessageFor(x => x.Senha)
    </div>

	 <div class="custom-select">
		 <select asp-for="Perfil" name="sources" id="sources" class="custom-select sources" placeholder="Perfil">
            <option value="@PerfilEnum.Padrao">Padrão</option>
            <option value="@PerfilEnum.Admin">Admin</option>            
        </select>
          @Html.ValidationMessageFor(x => x.Perfil)

    </div>
			<button type="submit">Entrar</button>
		</form>
	</div>


	<div class="form-container sign-in-container">
		<form asp-controller="Login" asp-action="Entrar" method="post">
			<h1>Login</h1>
			<div class="social-container">
				
			</div>
			<span>Ou use sua conta</span>
            <input type="text" asp-for="Login"  id="login" placeholder="Login"> <!--Login-->
            @Html.ValidationMessageFor(x => x.Login)

            <input type="password" asp-for="Senha" id="senha" placeholder="Senha">
             @Html.ValidationMessageFor(x => x.Senha)
			<a href="#">Esqueceu sua senha?</a>
			<button type="submit">Entrar</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Bem-Vindo(a)!</h1>
				<p>Para se manter conectado conosco, faça login com suas informações pessoais</p>
				<button class="ghost" id="signIn">Entrar</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Olá!</h1>
				<p>Insira seus dados pessoais e comece a jornada conosco</p>
				<button class="ghost" id="signUp">Novo Cadastro</button>
			</div>
		</div>
	</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/js/Login.js"></script>
</body>