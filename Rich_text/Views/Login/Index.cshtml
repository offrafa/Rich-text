@model UsuarioModel

@{
    Layout = "_LayoutDeslogado";
}

@Html.Raw(TempData["msg"])


<body>
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form  asp-controller="Login" asp-action="Criar" method="post">
			<h1>Criar Conta</h1>
			
			<span>Ou use eu E-mail para se registrar</span>
			<div class="form-group">
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuario">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
      <input type="text" asp-for="Email"  class="form-control" placeholder="Digite o email do usuario">
      @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <input type="text" asp-for="Login"  class="form-control" placeholder="Digite o login do usuario">
      @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="custom-select">
        <select asp-for="Perfil" class="custom-select">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin">Adiministrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>    
          @Html.ValidationMessageFor(x => x.Perfil)

    </div>

    <div class="form-group">
        <input type="password" asp-for="Senha"  class="form-control" placeholder="Digite o senha do usuario">
      @Html.ValidationMessageFor(x => x.Senha)
    </div>
			<button type="submit">Entrar</button>
		</form>
	</div>


	<div class="form-container sign-in-container">
		<form asp-controller="Login" asp-action="Entrar" method="post">
			<h1>Login</h1>
			<div class="social-container">
				
			</div>
			<span>Ou use sua conta</span>
            <input type="text" asp-for="Login"  id="login" placeholder="Nome"> <!--Login-->
            @Html.ValidationMessageFor(x => x.Login)

            <input type="password" asp-for="Senha" id="senha" placeholder="Senha">
             @Html.ValidationMessageFor(x => x.Senha)
			<a href="#">Esqueceu sua senha?</a>
			<button type="submit">Entrar</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Bem-Vindo(a)!</h1>
				<p>Para se manter conectado conosco, faça login com suas informações pessoais</p>
				<button class="ghost" id="signIn">Entrar</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Olá!</h1>
				<p>Insira seus dados pessoais e comece a jornada conosco</p>
				<button class="ghost" id="signUp">Novo Cadastro</button>
			</div>
		</div>
	</div>
</div>


</body>