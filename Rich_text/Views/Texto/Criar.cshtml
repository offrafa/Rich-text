@model TextoModel


<div class="text-center">
    <h1 class="diplay-4">Criar documento</h1>
</div>

<form asp-controller="Texto" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="nome" class="form-label">Titulo</label>
        <input type="text" asp-for="Titulo" class="form-control" placeholder="Titulo do documento">
        @Html.ValidationMessageFor(x => x.Titulo)
    </div>

    <div class="form-group">
      <label for="nome" class="form-label">Descrição</label>
      <input type="text" asp-for="Descricacao"  class="form-control" placeholder="Descrição do documento">
      @Html.ValidationMessageFor(x => x.Descricacao)
    </div>



    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secundary btn-block" asp-action="Index" asp-controller="Texto">Voltar</a>

    


</form>
