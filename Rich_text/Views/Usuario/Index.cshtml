@model List<UsuarioModel>

<link rel="stylesheet" href="~/css/Tabela.css" />



<br>
@if(TempData["MensagemSucesso"] != null){

    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="clase">X</button>
        @TempData"["MensagemSucesso"]
    </div>
}

@if(TempData["MensagemErro"] != null){

    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="clase">X</button>
        @TempData"["MensagemErro"]
    </div>
}
<br>


<div class="container">
    <h1>Listagem de Usuarios</h1>

	<table>
		<thead>
			<tr>
			    <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Data de cadastro</th>
                <th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@if(Model != null && Model.Any()){
            
            foreach(var usuario in Model){

                <tr>
                    <th scope="row">@usuario.Id</th>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Login</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.DataCadastro</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" asp-action="Editar" asp-controller="Usuario" asp-route-id="@usuario.Id" class="editar">Editar</a>
                            <a role="button" asp-action="ApagarConfirmacao" asp-controller="Usuario" asp-route-id="@usuario.Id" class="apagar">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else{
            <tr class="odd"><td valign="top" colspan="5">Nenhum usuario encontrado</td></tr>
        }


             <a class="button" asp-controller="Usuario" asp-action="criar" role="button">Adicionar um novo usuario</a>



		</tbody>
	</table>
</div>